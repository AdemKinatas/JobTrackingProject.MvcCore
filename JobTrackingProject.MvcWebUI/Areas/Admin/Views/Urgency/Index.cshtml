@model List<UrgencyListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count > 0)
{
    <a asp-area="Admin" asp-action="AddUrgency" asp-controller="Urgency" class="btn btn-sm btn-info my-2">Yeni aciliyet durumu ekle</a>
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th>Açıklama</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var urgency in Model)
            {
                <tr>
                    <td>@urgency.Description</td>
                    <td>
                        <a asp-action="UpdateUrgency" asp-controller="Urgency" asp-route-id="@urgency.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center mt-4">
        <p class="lead">
            Sistemde kayıtlı aciliyet durumu bulunamadı!
        </p> 
        <a asp-action="AddUrgency" asp-controller="Urgency" class="btn btn-sm btn-info my-2">Yeni aciliyet durumu ekle</a>
    </div>
}

